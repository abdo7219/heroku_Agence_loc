{% extends "base.html.twig" %}

{% block body %}
	{% for message in app.flashes('success') %}

		<div class="alert alert-success text-center">{{ message }}</div>

	{% endfor %}


	<a href="{{ path('admin_new_membre')}}" class="btn btn-success my-2">Ajout de membre</a>

	<table class="table">
		<thead>
			<tr>


				<th>#</th>
				<th>pseudo</th>
				<th>nom</th>
				<th>prenom</th>
				<th>email</th>
				<th>civilte</th>

				<th>date enregistrement</th>


				{# <th>Action</th> #}
				<th>Edit</th>
				<th>Suppr</th>
			</tr>
		</thead>
		<tbody>
			{% for membre in membres %}

				<tr>
					<td>{{ membre.id }}</td>
					<td>{{ membre.pseudo }}</td>
					<td>{{ membre.nom}}</td>
					<td>{{ membre.prenom}}</td>
					<td>{{ membre.email}}</td>
					<td>{{ membre.civilte}}</td>


					<td>{{ membre.dateEnregistrement|date('d/m/Y Ã  H:i:s') }}</td>


					<td>
						<a href="{{ path('admin_edit_membre', {id:membre.id}) }}" class="text-success">
							<i class="fas fa-edit"></i>
						</a>
					</td>
					<td>
						<a href="{{ path('admin_delete_membre', {id:membre.id}) }}" class="text-danger">
							<i class="fas fa-trash fa-2x"></i>
						</a>
					</td>

				</tr>


			{% endfor %}


		</tbody>

	</table>


{% endblock %}
