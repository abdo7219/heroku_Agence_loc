{% extends "base.html.twig" %}

{% block body %}
{% for message in app.flashes('success') %}
    
    <div class="alert alert-success text-center">{{ message }}</div>

{% endfor %}


<a href="{{ path('admin_new_vehicule')}}" class="btn btn-success my-2">Ajouter un vehicule</a>

	<table class="table">
		<thead>
			<tr>

				{% for data in champs %}

					<th>{{ data }}</th>

				{% endfor %}

				{# <th>Action</th> #}
				<th>Edit</th>
				<th>Suppr</th>
			</tr>
		</thead>
		<tbody>
			{% for vehicule in vehicules %}

				<tr>
					<td>{{ vehicule.id }}</td>
					<td>{{ vehicule.titre }}</td>
                    <td>{{ vehicule.marque }}</td>
					<td>{{ vehicule.modele }}</td>
					<td><img src="{{ vehicule.photo }}" style="width: 150px;"></td>
                    <td>{{ vehicule.prixJournalier }}</td>
					<td>{{ vehicule.dateEnregistrement|date('d/m/Y Ã  H:i:s') }}</td>
					<td>{{ vehicule.description|slice(0, 30)|raw }}</td>

					
					
					<td>
						<a href="{{ path('admin_edit_vehicule', {id:vehicule.id}) }}" class="text-success">
							<i class="fas fa-edit"></i>
						</a>
					</td>
					<td>
						<a href="{{ path('admin_delete_vehicule', {id:vehicule.id}) }}" class="text-danger">
							<i class="fas fa-trash fa-2x"></i>
						</a>
					</td>

				</tr>


			{% endfor %}


		</tbody>

	</table>


{% endblock %}
